<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body ondragover="return false">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <img src="~/Content/img/site/emblem.png" class="navbar-brand visible-md visible-lg visible-sm" /> 
                    <div class="visible-xs text-center">
                        <div class="head-char">А</div>
                        <div class="head-char">Т</div>
                        <div class="head-char">О</div>
                        <div class="head-char">М</div>
                    </div>
                @*@Html.ActionLink("Application name", "Index", "Blog", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <div class="visible-md visible-lg visible-sm text-center">
                    <div class="visible-lg-inline-block visible-md-inline-block visible-sm-inline-block">
                        <div class="head-label">Спортивный клуб</div>
                    </div>
                    <div class="head-char">А</div>
                    <div class="head-char">Т</div>
                    <div class="head-char">О</div>
                    <div class="head-char">М</div>
                </div>
                <ul class="navbar-nav nav">
                    <li>@Html.ActionLink("Новости", "Index", new {typeInfo="1"})</li>
                    <li>@Html.ActionLink("Анонс", "Index", new { typeInfo = "2" })</li>
                    <li>@Html.ActionLink("Новости", "Index", new { typeInfo = "3" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>